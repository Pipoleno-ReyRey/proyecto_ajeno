@model IEnumerable<estudiante_curso.Domain.Student>

<h2>Students</h2>

<a href="@Url.Action("Create", "Student")" class="btn btn-primary">Create New Student</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.id</td>
                <td>@student.name</td>
                <td>@student.email</td>
                <td>
                    <a href="@Url.Action("Details", "Student", new { id = student.id })">Details</a> |
                    <a href="@Url.Action("Edit", "Student", new { id = student.id })">Edit</a> |
                    <a href="@Url.Action("Delete", "Student", new { id = student.id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
